<Window x:Class="PicSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicSimulator" d:DataContext="{d:DesignInstance Type=local:PicViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Datei">
                <MenuItem Header="Laden" Command="{Binding LoadFileCommand}" IsCheckable="False"/>
            </MenuItem>
            <MenuItem Header="Einstellung">
                <MenuItem Header="Quarzfrequenz">
                    <MenuItem Header="8 MHz" IsCheckable="True"/>
                    <MenuItem Header="4 MHz" IsCheckable="True"/>
                    <MenuItem Header="16 MHz" IsCheckable="True"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <!--StatusBar-->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock>Datei:</TextBlock>
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock>PFAD</TextBlock>
            </StatusBarItem>
            <StatusBarItem FlowDirection="RightToLeft">
                <TextBlock>Die 2 Hellsten Leuchten</TextBlock>
            </StatusBarItem>
        </StatusBar>

        <!--Gesamt Grid-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200px"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="100px"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30px"/>
            </Grid.RowDefinitions>
            <!--Spezial Register-->
            <DataGrid d:ItemsSource="{d:SampleData ItemCount=16}" Grid.RowSpan="2" Margin="0,0,0,0"/>
            <StackPanel Grid.Row="2" Margin="0,0,0,0" Grid.RowSpan="3">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Grid.Row="0" Grid.Column="0" IsReadOnly="True"/>
                    <TextBox Grid.Row="0" Grid.Column="1" IsReadOnly="True"/>
                    <TextBox Grid.Row="0" Grid.Column="2"  IsReadOnly="True"/>
                    <TextBox Grid.Row="0" Grid.Column="3" IsReadOnly="True"/>

                    <TextBox Grid.Row="1" Grid.Column="1" IsReadOnly="True"/>
                    <TextBox Grid.Row="1" Grid.Column="2" IsReadOnly="True"/>
                    <TextBox Grid.Row="1" Grid.Column="3" IsReadOnly="True"/>
                    <TextBox Grid.Row="1" Grid.Column="4" IsReadOnly="True"/>

                    <TextBox Grid.Row="2" Grid.Column="1" IsReadOnly="True"/>
                    <TextBox Grid.Row="2" Grid.Column="2" IsReadOnly="True"/>
                    <TextBox Grid.Row="2" Grid.Column="3" IsReadOnly="True"/>
                    <TextBox Grid.Row="2" Grid.Column="4" IsReadOnly="True"/>

                    <TextBox Grid.Row="3" Grid.Column="1" IsReadOnly="True"/>
                    <TextBox Grid.Row="3" Grid.Column="2" IsReadOnly="True"/>
                    <TextBox Grid.Row="3" Grid.Column="3" IsReadOnly="True"/>
                    <TextBox Grid.Row="3" Grid.Column="4" IsReadOnly="True"/>

                    <TextBox Grid.Row="4" Grid.Column="1" IsReadOnly="True"/>
                    <TextBox Grid.Row="4" Grid.Column="2" IsReadOnly="True"/>
                    <TextBox Grid.Row="4" Grid.Column="3" IsReadOnly="True"/>
                    <TextBox Grid.Row="4" Grid.Column="4" IsReadOnly="True"/>

                    <TextBox Grid.Row="5" Grid.Column="1" IsReadOnly="True"/>
                    <TextBox Grid.Row="5" Grid.Column="2" IsReadOnly="True"/>
                    <TextBox Grid.Row="5" Grid.Column="3" IsReadOnly="True"/>
                    <TextBox Grid.Row="5" Grid.Column="4" IsReadOnly="True"/>

                    <TextBox Grid.Row="6" Grid.Column="1" IsReadOnly="True"/>
                    <TextBox Grid.Row="6" Grid.Column="2" IsReadOnly="True"/>
                    <TextBox Grid.Row="6" Grid.Column="3" IsReadOnly="True"/>
                    <TextBox Grid.Row="6" Grid.Column="4" IsReadOnly="True"/>

                    <TextBox Grid.Row="7" Grid.Column="1" IsReadOnly="True"/>
                    <TextBox Grid.Row="7" Grid.Column="2" IsReadOnly="True"/>
                    <TextBox Grid.Row="7" Grid.Column="3" IsReadOnly="True"/>
                    <TextBox Grid.Row="7" Grid.Column="4" IsReadOnly="True"/>

                    <TextBox Grid.Row="8" Grid.Column="1" IsReadOnly="True"/>
                    <TextBox Grid.Row="8" Grid.Column="2" IsReadOnly="True"/>
                    <TextBox Grid.Row="8" Grid.Column="3" IsReadOnly="True"/>
                    <TextBox Grid.Row="8" Grid.Column="4" IsReadOnly="True"/>

                    <TextBox Grid.Row="1" Grid.Column="0"/>
                    <TextBox Grid.Row="2" Grid.Column="0"/>
                    <TextBox Grid.Row="3" Grid.Column="0"/>
                    <TextBox Grid.Row="4" Grid.Column="0"/>
                    <TextBox Grid.Row="5" Grid.Column="0"/>
                    <TextBox Grid.Row="6" Grid.Column="0"/>
                    <TextBox Grid.Row="7" Grid.Column="0"/>
                    <TextBox Grid.Row="8" Grid.Column="0"/>
                </Grid>
            </StackPanel>
            <ListBox ItemsSource="{Binding Code}" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Column="0" IsChecked="{Binding Breakpoint}"/>
                            <TextBlock Text="{Binding Code}" Grid.Column="2" FontFamily="Courier New" Margin="5 0 0 0"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label Grid.Row="0" Grid.Column="1" Content="{Binding TestString}"/>
            <!--Output Register  - Aufgeteilt in drei Einzelne Register-->
            <!--Erstes Output Register-->
            <DataGrid Grid.Column="3" d:ItemsSource="{d:SampleData ItemCount=2}" Margin="0,0,0,40"/>
            <!--Zweites Output Register-->
            <DataGrid Grid.Column="3" d:ItemsSource="{d:SampleData ItemCount=2}" Margin="0,89,0,40" Grid.RowSpan="2"/>
            <!--Drittes Output Register-->
            <DataGrid Grid.Column="3" Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=2}" Margin="0,45,0,104" Grid.RowSpan="2"/>
        </Grid>
    </DockPanel>
</Window>
