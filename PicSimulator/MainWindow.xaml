<Window x:Class="PicSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicSimulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Datei" FlowDirection="LeftToRight">
                <MenuItem Header="Öffnen" IsCheckable="False"/>
            </MenuItem>
            <MenuItem Header="Einstellungen" FlowDirection="LeftToRight">
                <MenuItem Header="Quarzfrequenz" FlowDirection="LeftToRight" IsCheckable="False">
                    <MenuItem Header="4MHz" IsCheckable="True"/>
                    <MenuItem Header="8MHz" IsCheckable="True"/>
                    <MenuItem Header="16MHz" IsCheckable="True"/>
                </MenuItem>
            </MenuItem>
        </Menu>
        <StatusBar Background="red" Height="20px" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
